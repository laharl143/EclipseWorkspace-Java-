public class Main {

	public static void main(String[] args) {
		
		// method = a block of code that is executed whenever it is called upon
		
		int x = 3;
		int y = 41;
		
		int z = add(x,y);

		System.out.println(z);
	}
	
	static int add(int x, int y) {  //static keyword is need if you want the main method to read this method
		
		int z = x + y;
		return z;
		
	}
	
}